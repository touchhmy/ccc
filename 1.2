using System;

namespace second
{
    class Plant
    {
        int height;
        double weight;
        int width;
        public Plant(int height, double weight)
        {
            this.height = height;
            this.weight = weight;
        }
        public Plant(int height, double weight, int width)
        {
            this.height = height;
            this.weight = weight;
            this.width = width;
        }
        public void UserInfo()
        {
            Console.WriteLine($"рост: {this.height} см, вес: {this.weight} кг");
        }
        public void UserInfo(bool includeWidth)
        {
            Console.WriteLine($"рост: {this.height} см, вес: {this.weight} кг" + (includeWidth?$", ширина: {this.width} см" : ""));
        }
    }

    class Program
    {
        static void Main(string[] args)

        {
            Plant N1 = new Plant(100, 3.5);
            Plant N2 = new Plant(40, 1.5, 15);

            Console.WriteLine("1 растение:");
            N1.UserInfo();
            Console.WriteLine("2 растение:");
            N2.UserInfo(true);
        }
    }
}
